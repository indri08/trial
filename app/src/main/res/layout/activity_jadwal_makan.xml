<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JadwalMakan">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/back2"
        android:background="@drawable/toolbar"
        android:id="@+id/toolbarJadwalMakan">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hasil Perhitungan IMT dan Kalori"
            android:fontFamily="@font/bitter"
            android:textSize="15sp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/hasil"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jadwal Makan"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:fontFamily="@font/bitter"
            android:layout_marginBottom="2dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori     :    "
                android:layout_gravity="center"
                android:textSize="16sp"
                android:fontFamily="@font/bitter"/>
            <TextView
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/txtkategori"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan pagi"
                android:textSize="14sp"
                android:fontFamily="@font/bitterr"
                android:layout_marginTop="2dp"
                android:id="@+id/txt22"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner1"
                app:popupTextAlignment="start"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner2"
                app:popupTextAlignment="start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan siang"
                android:textSize="14sp"
                android:fontFamily="@font/bitterr"
                android:id="@+id/txt23"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner3"
                app:popupTextAlignment="start"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner4"
                app:popupTextAlignment="start"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner5"
                app:popupTextAlignment="start"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Makan malam"
                android:textSize="14sp"
                android:fontFamily="@font/bitterr"
                android:id="@+id/txt24"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner6"
                app:popupTextAlignment="start"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner7"
                app:popupTextAlignment="start"/>
            <org.angmarch.views.NiceSpinner
                android:layout_width="332dp"
                android:layout_height="42dp"
                android:id="@+id/spinner8"
                app:popupTextAlignment="start"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="           Total          :    "
                    android:textSize="16sp"
                    android:fontFamily="@font/bitter"
                    android:id="@+id/txt25"/>
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:id="@+id/txttotal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>