<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    android:layout_marginTop="80dp"
    tools:context=".Login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Halo,"
        android:textSize="40sp"
        android:fontFamily="@font/bitterr"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan masuk untuk melanjutkan."
        android:fontFamily="@font/bitterr"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username/Email"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bitterr"
        android:textSize="14sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:fontFamily="@font/bitterr"
        android:textSize="14sp"
        android:inputType="text"
        android:maxLength="20"
        android:hint="e.g Indri/indri@gmail.com"
        android:id="@+id/edtmail"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:fontFamily="@font/bitterr"
        android:textSize="14sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/border"
        android:fontFamily="@font/bitterr"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:maxLength="8"
        android:hint="e.g Indri_99"
        android:id="@+id/edtpass"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:text="Masuk"
        android:fontFamily="@font/bitter"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:id="@+id/btnmasuk"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Belum punya akun? Daftar di sini."
        android:layout_gravity="center"
        android:fontFamily="@font/bitterr"/>
</LinearLayout>